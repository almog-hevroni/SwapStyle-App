<resources>
    <!-- Dialogue-friendly design kit -->
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:backgroundDimAmount">0.5</item> <!-- Blackened background -->
        <item name="android:windowBackground">@drawable/dialog_background</item> <!-- Background of the dialogue -->
        <item name="android:windowMinWidthMajor">90%</item> <!-- Minimum size -->
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowIsFloating">true</item>

        <item name="colorPrimary">@color/tool_bar_color</item>
        <item name="colorAccent">@color/tool_bar_color</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="buttonBarButtonStyle">@style/CustomButtonStyle</item>
    </style>

    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/CustomDialogTitleStyle</item>
    </style>

    <style name="CustomDialogTitleStyle">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabRippleColor">@android:color/white</item>
    </style>

    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <!-- Date design kit -->
    <style name="CustomCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/tool_bar_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="materialCalendarHeaderLayout">@style/CustomHeaderStyle</item>
        <item name="materialCalendarHeaderDivider">@color/tool_bar_color</item>
    </style>

    <style name="CustomHeaderStyle" parent="Widget.MaterialComponents.MaterialCalendar.HeaderLayout">
        <item name="android:background">@color/tool_bar_color</item>
    </style>

    <!-- Hour design kit -->
    <style name="CustomTimePickerTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/tool_bar_color</item>
        <item name="colorAccent">@color/tool_bar_color</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="android:textColorPrimary">@color/tool_bar_color</item>
        <item name="android:textColorSecondary">@color/tool_bar_color</item>

        <item name="buttonBarPositiveButtonStyle">@style/CustomButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomButtonStyle</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/tool_bar_color</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#000000</item>
    </style>


</resources>
